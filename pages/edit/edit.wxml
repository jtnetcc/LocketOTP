<form bindsubmit="keySubmit">
  <view class="input-box">
    <text>服务名称</text>
    <input name="issuer" placeholder="" placeholder-style="color: #222222; font-size: 1rem;" value="{{issuer}}"/>
  </view>
  <view class="input-box">
    <text>服务备注</text>
    <input name="remark" placeholder="" placeholder-style="color: #222222; font-size: 1rem;" value="{{remark}}"/>
  </view>
  <view class="add-btn">
    <button form-type="submit">提交</button>
  </view>
</form>